<h1 class="title"> Eat some burgers! </h1>
<div class="columns is-mobile">
    <div class="column">
        <ul id="edible">
            {{#each burgers}}
                {{#unless devoured}}
                    {{> burgers/burger_block devoured=false}}
                {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="column">
        <ul id="devoured">
            {{#each burgers}}
                {{#if devoured}}
                    {{> burgers/burger_block devoured = true }}
                {{/if}}
            {{/each}}
        </ul>
    </div>
</div>
<div class="container">
<h2 class="subtitle">Add a Burger</h2>
    <form>
        <div>
            <span class="is-icon">
                <i class="fas fa-hamburger"></i>
            </span>
            <label for="burgie">Burger Name:</label>
            <input type="text" id="burgie" name="burger_name">
        </div>
        <button type="submit">Add Burger</button>
    </form>
</div>